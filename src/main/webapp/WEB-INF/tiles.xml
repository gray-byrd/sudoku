    <definition name="app.play" extends="layout" >
        <put-attribute name="body" value="/WEB-INF/tiles/board.jsp" />
        <put-attribute name="controls" value="/WEB-INF/tiles/controls.jsp" />
    </definition>

    <definition name="app.win" extends="layout" >
