        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="layout" template="/WEB-INF/layouts/layout.jsp">
        <put-attribute name="title" value="sudoku" />
        <put-attribute name="header" value="/WEB-INF/tiles/header.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="controls" value="" />
        <put-attribute name="footer" value="/WEB-INF/tiles/footer.jsp" />
    </definition>

    <definition name="app.welcome" extends="layout" >
        <put-attribute name="body" value="/WEB-INF/tiles/welcome.jsp" />
